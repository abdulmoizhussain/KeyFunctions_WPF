<Window x:Class="KeyFunctions_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyFunctions_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="MainWindow_OnLoaded">
    <Grid Margin="-3,0,3,0">
        <CheckBox Content="Set cursor position to one of the following corners of Primary Screen while typing." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,10,0" RenderTransformOrigin="-1.093,-6.223" />
        <CheckBox Content="Maintain Clipboard History" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,10,0" />
        <CheckBox Content="Clean special characters from clipboard-text which prepend: 'mis '" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,10,0" />
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,70,10,0"/>
    </Grid>
</Window>
